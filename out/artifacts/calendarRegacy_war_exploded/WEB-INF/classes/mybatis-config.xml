<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <!-- 자동으로 카멜케이스 규칙으로 변환 -->
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>
    <typeAliases>
        <typeAlias alias="CalendarDTO" type="com.yeop.calendar.domain.CalendarDTO"/>
        <typeAlias alias="HolidayAPIDTO" type="com.yeop.calendar.domain.HolidayAPIDTO"/>
        <typeAlias alias="CalendarVO" type="com.yeop.calendar.domain.CalendarVO"/>
    </typeAliases>
    <typeHandlers>
        <typeHandler handler="org.apache.ibatis.type.LocalDateTypeHandler" />
    </typeHandlers>
</configuration>